
requireFile("UrIRC.u");
requireFile("UrPlugin.u");

class UrIRC.UrUser : UrIRC.UrPlugin {

	var nick = nil;
	var loginAndHost = nil;

	function configure(params) {
		nick = params[0];
		loginAndHost = params[1].toLower;
	};
	
	function join() {
		if (!isJoined) {
			bot.send!(["JOIN " + name]);
		};
	};
	
	function asString() {
		"UrUser: " + nick + "(" + loginAndHost + ")";
	}
};

