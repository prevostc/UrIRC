
requireFile("UrIRC.u");
requireFile("UrPlugin.u");


/*
 * Automated ping request answer plugin.
 */
class UrIRC.UrPong : UrIRC.UrPlugin {

	/*
	 * Declare watchdog listening to ping requests
	 */
	function start() {
		_jobs : {
			// on ping
			at (bot.recv?("ping", var captures)) {
				// answer pong !
				bot.send("PONG " + captures["payload"]);
			};
		};
	};
};


